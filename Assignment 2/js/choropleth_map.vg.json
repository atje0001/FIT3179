{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title" : "Health system per Country",
    "width" : 800, 
    "height" : 600,
    "projection": {"type": "equirectangular"},

    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/atje0001/FIT3179/main/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
                
            }, 
            "mark": {"type":"geoshape","fill":"lightgray","stroke":"white"}
        },
        {

        "data": {
            "url": "https://raw.githubusercontent.com/atje0001/FIT3179/main/ne_110m_admin_0_countries.topojson",
            "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
            }
        }, 
        
        
            
        "transform": [
            {
                "lookup": "properties.NAME",
                "from":{
                    "data":{
                        "url": "https://raw.githubusercontent.com/atje0001/FIT3179/main/Assignment%202/data/Health_Risk_factors.csv"
                    },
                    "key": "Country",
                    "fields": ["Incidence of tuberculosis  per 100,000 people 2018"]
                    
                }
            }

        ],

        "layer": [
            {
                "mark": {"type":"geoshape"},
                "encoding": {
                    "color":{
                        "field": "Incidence of tuberculosis  per 100,000 people 2018",
                        "type": "quantitative",
                        "scale": {
                            "type" : "threshold",
                            "domain": [0,100, 200, 300, 400, 500, 600, 700 ],
                            "range": ["#656565", "#D6C7C7", "#FDC6C6", "#FF9C9C", "#CE5B5B", "#AB3939", "#9E1717", "#6F0000"]
                        }
            
                    },
                    "tooltip": [
                        {"field": "properties.NAME", "type": "nominal", "title" : "Country "},
                        {"field": "Incidence of tuberculosis  per 100,000 people 2018", "type" : "quantitative" , "title" : "Incidence of tuberculosis per 100,000 people 2018"}
                    ]
                }

            }
        ]

            
    
        } 
    ]
}

    
   